generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  password     String
  like         Like[]
}

model Products {
  id           String @id @default(cuid())
  name         String
  description  String
  amount       Int
  type         String
  image        String
  createdAt    DateTime
  price        Float
}

model Like {
  id           Int @id @default(autoincrement())
  products_ids String[]
  user         User @relation(fields: [user_id], references: [id])
  user_id      String @unique
}